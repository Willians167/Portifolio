
 @model  PROJETOMVC.Models.Contato;


@{
    ViewData["Title"] = "Criar novo contato";
}

<h1>Criar novo contato</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>

            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control"/>
                
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" class="form-check-imput"/>
                
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Criar" class="btm btm-primary" />
                
            </div>
        </form>
    </div>
</div>
</hr>
<div>
    <a asp-action="Index">Voltar para a lista de Contatos</a>
</div>
